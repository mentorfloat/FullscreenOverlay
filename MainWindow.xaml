<Window x:Class="FullscreenOverlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FullscreenOverlay"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="400">
    <Grid>
        <Button Content="Turn on overlay" HorizontalAlignment="Left" Margin="88,145,0,0" VerticalAlignment="Top" Height="34" Width="97" Click="Button_On"/>
        <TextBlock HorizontalAlignment="Left" Text="Make sure game is loaded in Fullscreen first. StickyWindow used, update game client process name as required. Resolution used is 1920 x 1080" TextWrapping="Wrap" VerticalAlignment="Top" Width="220" Margin="88,62,0,0"/>
        <Button Content="Turn off overlay" HorizontalAlignment="Left" Margin="88,196,0,0" VerticalAlignment="Top" Height="34" Width="97" Click="Button_Off"/>
        <Label Content="Test GameOverlay.Net in Fullscreen:" HorizontalAlignment="Left" Margin="37,21,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
